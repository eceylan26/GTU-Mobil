<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        
        <TextView
            android:id="@+id/popupContacName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact Name"
            android:textColor="@color/gtu_white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/popupPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/gtu_white"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/popupUnvan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:textColor="@color/gtu_white"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:padding="15dp"
            android:gravity="center"
            android:id="@+id/popupCallButton"
            android:drawableTop="@drawable/ic_local_phone_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/gtu_black"
            android:background="@color/gtu_white"/>
        

    </LinearLayout>
    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gtukelebekyuvarlak"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>


</RelativeLayout>